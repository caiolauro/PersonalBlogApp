<%- include('partials/header') %>
    <h1>Home</h1>
    <p>
        <%= homeStartingContent %>
    </p>
    <% posts.forEach(function(post) { %>
        <h2>
            <%= post.postTitle %>
        </h2>
        <p>
            <%= truncate(post.postContent) %> <a href="<%=" /posts/" + post._id %>" >Read more</a>
        </p>
    <% }) %>

<%- include('partials/footer') %>